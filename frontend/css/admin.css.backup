* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
    min-height: 100vh;
    color: #ffffff;
}

/* Header Styling */
.navbar {
    background: rgba(45, 45, 68, 0.95) !important;
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.navbar-brand {
    color: #ffffff !important;
    font-weight: 700;
}

.btn-outline-light {
    border-color: rgba(255, 255, 255, 0.4);
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.3s ease;
}

.btn-outline-light:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
    color: #ffffff;
}

/* Sidebar Styling */
.sidebar {
    background: rgba(45, 45, 68, 0.8);
    backdrop-filter: blur(10px);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    min-height: calc(100vh - 100px);
    border-radius: 12px;
    margin-right: 15px;
    position: sticky;
    top: 0;
    transition: all 0.3s ease-in-out;
    width: 250px;
    overflow: hidden;
}

.sidebar.collapsed {
    width: 70px;
}

.sidebar .nav-link {
    color: rgba(255, 255, 255, 0.8);
    padding: 12px 20px;
    margin: 4px 8px;
    border-radius: 8px;
    transition: all 0.3s ease;
    font-weight: 500;
    white-space: nowrap;
    display: flex;
    align-items: center;
}

.sidebar.collapsed .nav-link {
    padding: 12px;
    justify-content: center;
}

.sidebar.collapsed .nav-link span {
    display: none;
}

.sidebar .nav-link i {
    width: 20px;
    text-align: center;
}

.sidebar.collapsed .nav-link i {
    margin-right: 0 !important;
}

.sidebar .nav-link:hover {
    color: #ffffff;
    background: rgba(78, 205, 196, 0.1);
    border-left: 3px solid #4ecdc4;
}

.sidebar .nav-link.active {
    color: #ffffff;
    background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
    font-weight: 600;
}

.sidebar .nav-link i {
    width: 20px;
}

/* Main Content Area */
.main-content {
    background: rgba(255, 255, 255, 0.02);
    border-radius: 12px;
    padding: 20px;
    backdrop-filter: blur(5px);
}

.content-panel {
    display: none;
}

.content-panel.active {
    display: block;
}

/* Cards */
.card {
    background: rgba(45, 45, 68, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: #ffffff;
}

.card-header {
    background: rgba(78, 205, 196, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px 12px 0 0 !important;
}

.card-body {
    background: rgba(45, 45, 68, 0.7);
}

/* Stats Cards */
.border-left-primary {
    border-left: 4px solid #4ecdc4 !important;
}

.border-left-success {
    border-left: 4px solid #28a745 !important;
}

.border-left-info {
    border-left: 4px solid #17a2b8 !important;
}

.border-left-warning {
    border-left: 4px solid #ffc107 !important;
}

.text-primary {
    color: #4ecdc4 !important;
}

.text-success {
    color: #28a745 !important;
}

.text-info {
    color: #17a2b8 !important;
}

.text-warning {
    color: #ffc107 !important;
}

.text-gray-300 {
    color: rgba(255, 255, 255, 0.3) !important;
}

.text-gray-800 {
    color: #ffffff !important;
}

/* Buttons */
.btn-primary {
    background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
    border: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #44a08d 0%, #4ecdc4 100%);
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(78, 205, 196, 0.4);
}

.btn-success {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    border: none;
    border-radius: 8px;
    font-weight: 600;
}

.btn-success:hover {
    background: linear-gradient(135deg, #20c997 0%, #28a745 100%);
    transform: translateY(-1px);
}

.btn-info {
    background: linear-gradient(135deg, #17a2b8 0%, #20c997 100%);
    border: none;
    border-radius: 8px;
    font-weight: 600;
}

.btn-info:hover {
    background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%);
    transform: translateY(-1px);
}

.btn-warning {
    background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
    border: none;
    border-radius: 8px;
    font-weight: 600;
    color: #212529;
}

.btn-warning:hover {
    background: linear-gradient(135deg, #fd7e14 0%, #ffc107 100%);
    transform: translateY(-1px);
    color: #212529;
}

.btn-secondary {
    background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
    border: none;
    border-radius: 8px;
    font-weight: 600;
}

.btn-secondary:hover {
    background: linear-gradient(135deg, #495057 0%, #6c757d 100%);
    transform: translateY(-1px);
}

/* Form Controls */
.form-control, .form-select {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    border-radius: 8px;
}

.form-control:focus, .form-select:focus {
    background: rgba(255, 255, 255, 0.15);
    border-color: #4ecdc4;
    box-shadow: 0 0 0 0.2rem rgba(78, 205, 196, 0.25);
    color: #ffffff;
}

.form-control::placeholder {
    color: rgba(255, 255, 255, 0.6);
}

.form-label {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
}

/* Modal Styling */
.modal-content {
    background: rgba(45, 45, 68, 0.95);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
}

.modal-header {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.modal-footer {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.btn-close {
    background: transparent url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23ffffff'%3e%3cpath d='m.235 1.406 4.405 4.405 4.405-4.405a.75.75 0 1 1 1.06 1.06L6.7 6.871l4.405 4.405a.75.75 0 1 1-1.06 1.06L5.64 7.931l-4.405 4.405a.75.75 0 1 1-1.06-1.06L4.579 6.871.174 2.466a.75.75 0 1 1 1.061-1.06z'/%3e%3c/svg%3e") center/1em auto no-repeat;
}

/* Page Headers */
.h2 {
    color: #ffffff;
    font-weight: 700;
    margin-bottom: 0;
}

.border-bottom {
    border-color: rgba(255, 255, 255, 0.2) !important;
}

/* Typography */
.text-muted {
    color: rgba(255, 255, 255, 0.6) !important;
}

.font-weight-bold {
    font-weight: 700 !important;
}

.text-xs {
    font-size: 0.75rem;
}

/* Layout Fix */
.row {
    --bs-gutter-x: 1.5rem;
    --bs-gutter-y: 0;
    display: flex;
    flex-wrap: wrap;
    margin-top: calc(-1 * var(--bs-gutter-y));
    margin-right: calc(-0.5 * var(--bs-gutter-x));
    margin-left: calc(-0.5 * var(--bs-gutter-x));
}

.col-md-3, .col-lg-2 {
    flex: 0 0 auto;
    width: 250px;
    min-width: 250px;
    transition: all 0.3s ease-in-out;
}

.col-md-3.collapsed, .col-lg-2.collapsed {
    width: 70px;
    min-width: 70px;
}

.col-md-9, .col-lg-10 {
    flex: 1;
    max-width: calc(100% - 265px);
    transition: all 0.3s ease-in-out;
}

.main-content.expanded {
    max-width: calc(100% - 85px);
}

/* Tooltip for collapsed sidebar */
.sidebar.collapsed .nav-link {
    position: relative;
}

.sidebar.collapsed .nav-link:hover::after {
    content: attr(data-tooltip);
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 8px 12px;
    border-radius: 6px;
    font-size: 0.875rem;
    white-space: nowrap;
    z-index: 1000;
    margin-left: 10px;
    pointer-events: none;
}

.sidebar.collapsed .nav-link:hover::before {
    content: '';
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    border: 5px solid transparent;
    border-right-color: rgba(0, 0, 0, 0.9);
    margin-left: 5px;
    pointer-events: none;
}

/* Responsive Design */
@media (max-width: 768px) {
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 300px;
        height: 100vh;
        z-index: 999;
        margin-right: 0;
        border-radius: 0;
        transform: translateX(-100%);
    }

    .sidebar.show {
        transform: translateX(0);
    }

    .col-md-3, .col-lg-2 {
        width: 0;
        min-width: 0;
        overflow: hidden;
    }

    .col-md-9, .col-lg-10 {
        max-width: 100%;
        width: 100%;
    }

    .main-content {
        padding: 15px;
    }

    .main-content {
        padding: 15px;
    }

    .card-body {
        padding: 1rem;
    }

    .col-xl-3, .col-md-6 {
        margin-bottom: 1rem;
    }
}

@media (max-width: 576px) {
    .navbar-brand span {
        font-size: 1rem;
    }

    .sidebar {
        border-radius: 8px;
    }

    .sidebar .nav-link {
        padding: 10px 15px;
        font-size: 0.9rem;
    }

    .main-content {
        padding: 10px;
    }

    .card {
        border-radius: 8px;
    }
}

/* Staff Management Specific Styles */
.avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.9rem;
    color: #ffffff;
    flex-shrink: 0;
}

.avatar-circle-lg {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.8rem;
    color: #ffffff;
}

/* Table Styling */
.table {
    color: rgba(255, 255, 255, 0.95);
    border-color: rgba(255, 255, 255, 0.1);
}

.table thead {
    background: rgba(78, 205, 196, 0.1);
    border-color: rgba(255, 255, 255, 0.1);
}

.table thead th {
    color: #4ecdc4;
    font-weight: 600;
    border-color: rgba(255, 255, 255, 0.1);
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
}

.table tbody td {
    border-color: rgba(255, 255, 255, 0.1);
    vertical-align: middle;
}

.table-hover tbody tr:hover {
    background: rgba(78, 205, 196, 0.05);
    cursor: pointer;
}

/* Badge Styling */
.badge {
    padding: 0.4rem 0.8rem;
    font-weight: 500;
    border-radius: 6px;
    font-size: 0.8rem;
}

.badge.bg-info {
    background: linear-gradient(135deg, #17a2b8 0%, #20c997 100%) !important;
}

.badge.bg-secondary {
    background: linear-gradient(135deg, #6c757d 0%, #495057 100%) !important;
}

.badge.bg-success {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
}

.badge.bg-warning {
    background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%) !important;
    color: #212529;
}

.badge.bg-danger {
    background: linear-gradient(135deg, #dc3545 0%, #c82333 100%) !important;
}

.badge.bg-primary {
    background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%) !important;
}

/* Button Group */
.btn-group-sm .btn {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}

.btn-outline-primary {
    color: #4ecdc4;
    border-color: #4ecdc4;
}

.btn-outline-primary:hover {
    background: #4ecdc4;
    border-color: #4ecdc4;
    color: #ffffff;
}

.btn-outline-success {
    color: #28a745;
    border-color: #28a745;
}

.btn-outline-success:hover {
    background: #28a745;
    border-color: #28a745;
    color: #ffffff;
}

.btn-outline-danger {
    color: #dc3545;
    border-color: #dc3545;
}

.btn-outline-danger:hover {
    background: #dc3545;
    border-color: #dc3545;
    color: #ffffff;
}

/* Toast Notifications */
.toast-container {
    z-index: 9999;
}

.toast {
    background: rgba(45, 45, 68, 0.95);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #ffffff;
}

.toast-header {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.toast-body {
    color: rgba(255, 255, 255, 0.9);
}

/* Input Group */
.input-group-text {
    background: rgba(78, 205, 196, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #4ecdc4;
    font-weight: 600;
}

/* Alert Styling */
.alert {
    border-radius: 8px;
    border: none;
}

.alert-danger {
    background: rgba(220, 53, 69, 0.15);
    color: #ff6b6b;
    border-left: 4px solid #dc3545;
}

.alert-success {
    background: rgba(40, 167, 69, 0.15);
    color: #51cf66;
    border-left: 4px solid #28a745;
}

.alert-warning {
    background: rgba(255, 193, 7, 0.15);
    color: #ffd43b;
    border-left: 4px solid #ffc107;
}

.alert-info {
    background: rgba(23, 162, 184, 0.15);
    color: #4ecdc4;
    border-left: 4px solid #17a2b8;
}

/* Code element styling */
code {
    background: rgba(78, 205, 196, 0.15);
    color: #4ecdc4;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
}

/* Staff Card Quick Info */
.fw-semibold {
    font-weight: 600 !important;
}

/* Scrollbar Styling */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: rgba(78, 205, 196, 0.3);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
    background: rgba(78, 205, 196, 0.5);
}

/* Table Responsive */
.table-responsive {
    border-radius: 8px;
    overflow-x: auto;
}

/* Form Section Headers */
.modal-body h6 {
    color: #4ecdc4;
    font-weight: 600;
    border-bottom: 2px solid rgba(78, 205, 196, 0.3);
    padding-bottom: 0.5rem;
}

/* Select Options */
.form-select option {
    background: #2d2d44;
    color: #ffffff;
}

/* Small text styling */
small.text-muted {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5) !important;
}